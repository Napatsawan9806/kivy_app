ScreenManager:
	FirstPage:
	SecondPage:


<FirstPage>:
	name: 'first'
	FloatLayout:
		Button:
			text: 'Play Game'
			size_hint: 0.2, 0.15
			pos_hint: {"x" : 0.4, "top" : 0.65}
			font_size: 30
			background_color: 0.5, 0.2, 0.65, 1
			on_press: root.manager.current = 'second'
		
<SecondPage>:
	name: 'second'
	FloatLayout:
		GameBackground:
			id: background
			canvas.before:
				Rectangle:
					source: 'background.jpg'
					pos: self.pos
					size: self.size
				Rectangle:
					size: self.width, 210
					pos: self.pos[0], self.pos[1] + self.height - 210
					texture: self.clound_texture
				Rectangle:
					size: self.width, 200
					pos: self.pos[0], self.pos[1]
					texture: self.floor_texture
		
		Dino:
			id: dino
			Image:
				source: 'dino1.jpg'