ScreenManager:
	FirstPage:
	# SecondPage:


<FirstPage>:
	name: 'first'
	BoxLayout:
		orientation: 'vertical'
		Button:
			text: 'Play'
			# on_press: root.manager.current = 'second'
		
<SecondPage>:
	name: 'second'
	FloatLayout:
		GameBackground:
			id: background
			canvas.before:
				Rectangle:
					source: 'background.jpg'
					pos: self.pos
					size: self.size
				Rectangle:
					size: self.width, 210
					pos: self.pos[0], self.pos[1] + self.height - 210
					texture: self.clound_texture
				Rectangle:
					size: self.width, 200
					pos: self.pos[0], self.pos[1]
					texture: self.floor_texture